@model KsiazkaKucharska.VievModels.RecipeDetailsVM
@{
    ViewData["Title"] = "Szczegóły przepisu";
    var r = Model.Recipe;
}

<div class="container py-4">
    @* Nagłówek i Przyciski *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">@r.Title</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Przepisy</a></li>
                    <li class="breadcrumb-item active">@r.Category?.Name</li>
                </ol>
            </nav>
        </div>
        <div class="btn-group shadow-sm">
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@r.Id">📝 Edytuj</a>
            <a class="btn btn-secondary" asp-action="Index">🔙 Powrót</a>
        </div>
    </div>

    <div class="row">
        @* LEWA KOLUMNA: Info i Składniki *@
        <div class="col-lg-4">
            @* Karta parametrów *@
            <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                <div class="card-header bg-dark text-white fw-bold">📊 Metryka</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <tbody>
                            <tr><td class="ps-3 text-muted">Kategoria</td><td class="text-end pe-3 font-weight-bold">@r.Category?.Name</td></tr>
                            <tr><td class="ps-3 text-muted">Czas prep.</td><td class="text-end pe-3 font-weight-bold">⏱️ @r.PrepTimeMinutes min</td></tr>
                            <tr><td class="ps-3 text-muted">Porcje</td><td class="text-end pe-3 font-weight-bold">🍽️ @r.Portions</td></tr>
                            <tr><td class="ps-3 text-muted">Trudność</td><td class="text-end pe-3 font-weight-bold text-danger">🔥 @r.Difficulty</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>

            @* Składniki *@
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white fw-bold">🥦 Składniki</div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var ri in r.RecipeIngredients.OrderBy(x => x.Ingredient!.Name))
                        {
                            <li class="list-group-item px-0 d-flex justify-content-between align-items-center">
                                <span>@ri.Ingredient!.Name</span>
                                <span class="badge bg-light text-dark border">@ri.Amount @ri.Unit</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            @* Ocena *@
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-2">Średnia ocena</h6>
                    <h2 class="text-warning mb-0">⭐ @(Model.RatingsCount == 0 ? "brak" : $"{Model.AvgRating:F1}")</h2>
                    <small class="text-muted">(@Model.RatingsCount głosów)</small>

                    <form asp-controller="Ratings" asp-action="Add" method="post" class="mt-3 pt-3 border-top">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="recipeId" value="@r.Id" />
                        <div class="input-group input-group-sm">
                            <select class="form-select" name="value">
                                <option value="5">⭐⭐⭐⭐⭐ (5)</option>
                                <option value="4">⭐⭐⭐⭐ (4)</option>
                                <option value="3">⭐⭐⭐ (3)</option>
                                <option value="2">⭐⭐ (2)</option>
                                <option value="1">⭐ (1)</option>
                            </select>
                            <button class="btn btn-success" type="submit">Oceń</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @* PRAWA KOLUMNA: Opisy *@
        <div class="col-lg-8">
            @if (!string.IsNullOrWhiteSpace(r.Description))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body italic lead text-secondary italic">
                        <i class="bi bi-quote"></i> @r.Description
                    </div>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h4 class="mb-0 fw-bold">👨‍🍳 Instrukcje przygotowania</h4>
                </div>
                <div class="card-body p-4" style="line-height: 1.8; font-size: 1.1rem; background-color: #fdfdfd;">
                    <pre style="white-space: pre-wrap; font-family: inherit; color: #333;">@r.Instructions</pre>
                </div>
            </div>
        </div>
    </div>
</div>