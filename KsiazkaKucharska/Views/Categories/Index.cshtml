@model List<KsiazkaKucharska.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">+ Add category</a>
    <a class="btn btn-outline-secondary" asp-controller="Recipes" asp-action="Index">Back to recipes</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
